# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure OpenAI Deployment Names
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o  # Your chat model deployment name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment  # Optional: embedding deployment name

# Agent Settings
AGENT_TEMPERATURE=1.0  # Temperature for LLM responses (0.0-2.0)
REQUEST_TIMEOUT=30  # Request timeout in seconds
MAX_RETRIES=3  # Maximum number of retries for failed requests

# Conversation History Settings
MAX_CONVERSATION_MESSAGES=20  # Maximum messages to keep in rolling window
CONVERSATION_HISTORY_FILE=data/conversation_history.json  # Path to history file

# Security Settings
RATE_LIMIT_ENABLED=true  # Enable rate limiting
RATE_LIMIT_CALLS=10  # Maximum calls per time period
RATE_LIMIT_PERIOD=60  # Time period in seconds
MAX_INPUT_LENGTH=10000  # Maximum input length in characters

# General Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Azure Cognitive Search configuration (optional - set to enable RAG)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_API_VERSION=2023-07-01-Preview
AZURE_SEARCH_INDEX=pcornet-icd-index
AZURE_SEARCH_VECTOR_FIELD=vector
AZURE_SEARCH_SEARCH_FIELDS=title,content
